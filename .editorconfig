# EditorConfig helps maintain consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files - no trimming or indentation enforcement
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML files (e.g., GitHub Actions)
[*.yml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Blade templates
[*.blade.php]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# PHP files
[*.php]
indent_style = space
indent_size = 4

# JavaScript / TypeScript
[*.js]
indent_size = 2

[*.ts]
indent_size = 2

# Vue files
[*.vue]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4